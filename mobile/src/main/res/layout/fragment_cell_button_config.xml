<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.control.cells.config.CellButtonConfigFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/card_style">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="@dimen/default_item_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/item_type"
                            android:id="@+id/hdr_item_type" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/itemsSpinner"
                            android:spinnerMode="dialog"
                            android:entries="@array/empty"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/image" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/controller_config_icon_height"
                            android:id="@+id/setIconButton"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/command"
                            android:id="@+id/hdr_command"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/commandText"
                            android:layout_gravity="center_horizontal"
                            android:visibility="gone"
                            android:inputType="text"/>
                    </LinearLayout>

                    <ToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:id="@+id/toggleOnOff"
                        android:layout_gravity="center_horizontal"
                        android:checked="false" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>
